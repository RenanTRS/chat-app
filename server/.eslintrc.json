{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-unresolved": "off",
        "indent": ["error", 2],
        "semi": ["error", "never"],
        "spaced-comment": "off",
        "import/extensions": [
            "never",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    }
}